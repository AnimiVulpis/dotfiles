[init]
	defaultBranch = main

[user]
	useConfigOnly = true

[includeIf "gitdir:~/work/"]
	path = ~/work/gitconfig

[includeIf "gitdir:~/projects/"]
	path = ~/projects/gitconfig

[includeIf "gitdir:~/repos/"]
	path = ~/projects/gitconfig

[core]
	editor = nvim
	pager = delta

[pager]
	diff = delta
	log = delta
	reflog = delta
	show = delta

[log]
	date = iso

[interactive]
	diffFilter = delta --color-only --features=interactive

[delta]
	features = decorations navigation
	syntax-theme = Solarized (dark)

[delta "interactive"]
	keep-plus-minus-markers = false

[delta "decorations"]
	commit-decoration-style = blue box ol
	hunk-header-style = file line-number syntax

[diff]
	colorMoved = zebra

[mergetool]
	keepBackup = false

[alias]
	diffs = diff --staged
	ffomerge = merge --ff-only
	nffmerge = merge --no-ff
	tmerge = merge --no-commit --no-ff
	lastcommit = for-each-ref --sort='-authordate' --format='%(color:blue)%(authordate:relative)%09%(color:green)%(authorname)%09%(color:yellow)%(objectname:short)%09%(color:red)%(refname:short)' refs/
	logd = log --pretty=format:'%s%n%>(14)%C(auto)%h - %C(bold black)%aD%Creset %C(blue)(%ar)%Creset %C(magenta)%an%Creset%C(auto)%d'
	logg = log --graph
	logga = log --graph --all
	loggd = log --graph --pretty=format:'%C(auto)%h - %C(bold black)%aD%Creset %C(blue)(%ar)%Creset - %C(magenta)%an%Creset%C(auto)%d%n%s'
	loggo = log --graph --oneline
	loggoa = log --graph --oneline --all
	logo = log --oneline
	st = status --short

[maintenance]
	repo = /home/user/zsh-repos/emoji-cli
	repo = /home/user/zsh-repos/fast-syntax-highlighting
	repo = /home/user/zsh-repos/history-search-multi-word
	repo = /home/user/zsh-repos/LS_COLORS
	repo = /home/user/zsh-repos/powerlevel10k
	repo = /home/user/zsh-repos/zsh-autosuggestions
	repo = /home/user/zsh-repos/zsh-colored-man-pages
	repo = /home/user/zsh-repos/zsh-completions
	repo = /home/user/zsh-repos/zsh-edit
	repo = /home/user/zsh-repos/zsh-nvm
	repo = /home/user/zsh-repos/zsh-sudo
	repo = /home/user/zsh-repos/zsh-terminal-title
