[init]
	defaultBranch = main

[user]
	useConfigOnly = true

[include]
	path = ./config.local

[core]
	editor = hx
	pager = delta

[pager]
	diff = delta
	log = delta
	reflog = delta
	show = delta

[log]
	date = iso

[interactive]
	diffFilter = delta --color-only --features=interactive

[delta]
	dark = true
	navigate = true
	features = decorations moved-diff
	line-numbers = true
	syntax-theme = Solarized (dark)
	max-syntax-highlighting-length = 42000
	max-line-length = 42000

[delta "moved-diff"]
	minus-style = syntax "#631034"
	minus-emph-style = syntax "#9f2158"
	plus-style = syntax "#323c0d"
	plus-emph-style = syntax "#55631b"
	map-styles = \
		bold purple => syntax "#5a0f57", \
		bold blue => syntax "#1f2d76", \
		bold cyan => syntax "#0e4038", \
		bold yellow => syntax "#844c15"

[delta "interactive"]
	keep-plus-minus-markers = false

[delta "decorations"]
	commit-decoration-style = yellow normal ul
	hunk-header-style = file line-number syntax

[merge]
	conflictstyle = zdiff3

[diff]
	colorMoved = default
	external = difft

[mergetool]
	keepBackup = false

[alias]
	dlog = log --ext-diff
	dl = log --ext-diff -p
	dshow = show --ext-diff
	ds = show --ext-diff
	diffs = diff --staged
	diffn = diff --no-ext-diff
	diffsn = diff --staged --no-ext-diff
	ffomerge = merge --ff-only
	nffmerge = merge --no-ff
	tmerge = merge --no-commit --no-ff
	lastcommit = for-each-ref --sort='-authordate' --format='%(color:blue)%(authordate:relative)%09%(color:green)%(authorname)%09%(color:yellow)%(objectname:short)%09%(color:red)%(refname:short)' refs/
	logd = log --pretty=format:'%s%n%>(14)%C(auto)%h - %C(bold black)%aD%Creset %C(blue)(%ar)%Creset %C(magenta)%an%Creset%C(auto)%d'
	logg = log --graph
	logga = log --graph --all
	loggd = log --graph --pretty=format:'%C(auto)%h - %C(bold black)%aD%Creset %C(blue)(%ar)%Creset - %C(magenta)%an%Creset%C(auto)%d%n%s'
	loggo = log --graph --oneline
	loggoa = log --graph --oneline --all
	logo = log --oneline
	st = status --short
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
